<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.sp4rck.moviesandstuff.activities.DetailActivity.DetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.66"
            >
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:textSize="30dp" android:id="@+id/title" />
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/year" />
        </LinearLayout>
        <ImageView
            android:id="@+id/poster"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_weight="0.34"
            />
    </LinearLayout>
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/genre" android:layout_marginTop="10dp" />
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/actors" android:layout_marginTop="10dp" />
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/plot" android:layout_marginTop="10dp" />
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/imdbRating" android:layout_marginTop="10dp" />
    <TextView android:layout_width="wrap_content" android:autoLink="web"
        android:layout_height="wrap_content" android:id="@+id/imdbLink" android:layout_marginTop="10dp" />

</LinearLayout>
